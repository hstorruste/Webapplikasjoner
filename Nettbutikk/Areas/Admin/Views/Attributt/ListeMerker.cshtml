@model IEnumerable<Nettbutikk.Model.Merke>

<table id="merker" class="table">
    <tr>
        <th class="col-md-4">
            @Html.DisplayNameFor(model => model.navn)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="col-md-4">
                @Html.DisplayFor(modelItem => item.navn)
            </td>
            <td>
                @Html.ActionLink("Rediger", "Edit", new { id = item.merkeId }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Slett", "Delete", new { id = item.merkeId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
<table class="table">
    <tr>
        <td class="col-md-4">
            <input id="nyMerke" class="form-control" type="text" placeholder="Legg til et nytt merke" />
        </td>
        <td>
            <button id="btnLeggTilMerke" class="btn btn-success">Legg til</button>
            <label id="errorMerke" class="text-danger"></label>
        </td>
    </tr>
</table>

@model List<Model.Nettbutikk.Skoen>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hjem</title>
</head>
<body>
    <div> 
        <h2 class="text-center">
            Velkommen til Skobutikken!
        </h2>
        <hr />
        <div class="panel-group col-md-12">
            <!-- Legger inn listePartials med sko. -->
            <div>
                @if (Model != null)
                {
                    foreach (var sko in Model)
                    {
                        <div class="col-md-3" style="padding:0px">
                            @Html.Partial("ListePartial", sko)
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</body>
</html>
